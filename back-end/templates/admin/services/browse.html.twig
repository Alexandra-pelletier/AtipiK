{% extends 'admin/base.html.twig' %}

{% block title %}Liste des services - AtipiK{% endblock %}

{% block body %} 

<div class="body">

{{parent()}}

<div class="right-side">
	<main>
		<div class="title">
			<h3>Services</h3>
				<a href="{{path('admin_services_add')}}" class="service-add">
    			Ajouter un nouveau service
				</a>
		</div>

		<div class="array">
			<table class="table">
                <thead>
			        <tr class="table-dark">
					<th scope="col">ID</th>
					<th scope="col">Icone</th>
					<th scope="col">Nom</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						{% for service in services %}
						<th class="align-middle" scope="row">{{service.id}}</th>
						<td class="align-middle"><img src="{{ asset('assets/icon/' ~ service.icon) }}" class='img-back' alt=""></td>
						<td class="align-middle">{{service.name}}</td>
						<td class="align-middle">
                        	<a href="{{path('admin_services_edit', {'id' : service.id })}}">
								<button type="edit" class="edit">Modifier</button>
							</a>
						</td>
					 	<td class="align-middle"{{ form(forms[loop.index0]) }}</td>
                    </tr>
						{% endfor %}

				</tbody>
			</table>
		</div>
	</main>
</div>
</div>
{% endblock %}