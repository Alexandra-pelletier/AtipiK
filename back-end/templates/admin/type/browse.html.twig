{% extends 'admin/base.html.twig' %}

{% block title %}Listes des types d'hébergements - AtipiK{% endblock %}

{% block body %}

<div class="body">

{{parent()}}

<div class="right-side">
	<main>
		<div class="title">
			<h3>Types d'hébergements</h3>
			<a href="{{path('admin_type_add')}}" class ="type-add">
    		Ajouter un nouveau type
			</a>
		</div>

		<div class="array">
			<table class="table">
                <thead>
			        <tr class="table-dark">
					<th scope="col">ID</th>
					<th scope="col">Image</th>
					<th scope="col">Icone</th>
					<th scope="col">Nom</th>
					<th scope="col">Thématique</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						{% for type in types %}
						<th class="align-middle" scope="row">{{type.id}}</th>
						<td class="align-middle"><img src="{{ asset('assets/type/' ~ type.picture) }}" class='img-back' alt=""></td>
						<td class="align-middle"><img src="{{ asset('assets/icon/' ~ type.icon) }}" class='icon-back' alt=""></td>
						<td class="align-middle">{{type.name}}</td>
						<td class="align-middle">{{type.thematic.name}}</td>
						<td class="align-middle">
							<a href="{{path('admin_type_edit', {'id' : type.id })}}">
								<button type="edit" class="edit">Modifier</button>
							</a>
						</td>
						 <td class="align-middle">{{ form(forms[loop.index0]) }}</td>
					</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
	</main>
</div>
</div>
{% endblock %}

